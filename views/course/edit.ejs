<% layout('layouts/boilertemplate.ejs') %> 
<div class="border m-3 p-3 bg-light">
    <h1>Edit course</h1>
    <form action="/course/<%= course._id %>/update?_method=PUT " method="POST">
        <div class="mb-2">
            <label for="name" class="col-form-label">Name</label>
            <input type="text" name="name" id="name" value="<%= course.name %>" class="form-control" required>
        </div>
        <div class="mb-2">
            <label for="credits" class="col-form-label">Credits</label>
            <input type="number" name="credits" id="credits" value="<%= course.credits %>" class="form-control" required>
        </div>
        <div class="mb-2">
            <label for="description" class="col-form-label">Description</label>
            <textarea name="description" id="description" cols="30" rows="5" class="form-control" required><%= course.description %></textarea>
        </div>
        <div class="mb-2">
            <label for="capacity" class="col-form-label">Capacity</label>
            <input type="number" name="capacity" id="capacity" value="<%= course.capacity%>" class="form-control" required>
        </div>
        <button class="btn btn-success btn-sm" >Save!</button>
        <a href="/user" class="btn btn-secondary btn-sm">Cancel</a>
    </form>
    
</div>